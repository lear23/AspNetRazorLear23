@page
@model AspNetRazorLear23.Pages.SignInModel
@{

    ViewData["Title"] = "Sign In";
}
<section class="custom-container px-6 sm:px-12 lg:px-20 xl:px-40 pt-10 pb-10">
    <div class="flex justify-center items-center">
        <form method="post" class="block w-full sm:w-[90%] md:w-[75%] lg:w-[55%] xl:w-[60%] p-7">
            <h1 class="text-2xl font-bold mb-4">Welcome Back</h1>
            <p class="text-xs mb-4">Don’t have an account yet? <a href="/SignUp" class="text-blue-600">Sign up here.</a></p>        

         

            <div class="flex flex-col mb-5">
                <label asp-for="@Model.FormIn.Email" class="font-bold mb-1">Email address</label>
                <span asp-validation-for="@Model.FormIn.Email" class="text-red-500"></span>
                <input asp-for="@Model.FormIn.Email" placeholder="Enter your email address" class="p-2 mt-1 border-2 border-gray-200 rounded-lg w-full placeholder-gray-500 text-sm" />

            </div>
            <div class="flex flex-col mb-5">
                <label asp-for="@Model.FormIn.Password" class="font-bold mb-1">Password</label>
                <span asp-validation-for="@Model.FormIn.Password" class="text-red-500"></span>
                <input asp-for="@Model.FormIn.Password" type="password" placeholder="********" class="p-2 mt-1 border-2 border-gray-200 rounded-lg w-full placeholder-gray-500 text-sm" />
          
            </div>
           
            <div class="mb-4">
                <input asp-for="@Model.FormIn.RememberMe" type="checkbox">
                <label asp-for="@Model.FormIn.RememberMe" for="checkbox">Remember Me</label>
            </div>

            <button class="btn-theme mb-4">Sign In</button>
            <a class="py-4" asp-controller="Account" asp-action="Forgot">Forgot your password?</a>
            <hr>
            <h5 class="mt-4"><b>Or sign in with your social network</b></h5>
            <div class="flex justify-center items-center gap-6 mt-4">
                <a class="btn-gray" asp-action="Google" asp-controller="Auth"><img src="images/bxl-google.svg" alt="">Google</a>
                <a class="btn-gray" asp-action="Facebook" asp-controller="Auth"><img src="images/bxl-facebook.svg" alt="">Facebook</a>
            </div>
        </form>
    </div>
</section>

